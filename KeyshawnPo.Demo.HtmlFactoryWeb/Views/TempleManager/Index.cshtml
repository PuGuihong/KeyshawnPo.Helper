@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.11.3.js"></script>
    <script src="~/Scripts/jquery.easyui-1.3.5.js"></script>

</head>
<body>
    <table id="tt" class="easyui-datagrid" style="width:600px;height:200px"></table>

    <div class="easyui-panel" style="padding:5px;width:600px;height:200px">
        <ul id="tree_1" class="easyui-tree"></ul>
    </div>

    <div class="easyui-panel" style="padding:5px;width:600px;height:200px">
        <ul id="treegrid_1" class="easyui-treegrid"></ul>
    </div>

    <div class="easyui-panel" style="padding:5px;width:600px;height:200px">
        <input id="combobox_1" class="easyui-combobox" name="browser" style="width:100%;">
    </div>


    <script type="text/javascript">

        $('#combobox_1').combobox({
            url: '../TempleManager/ComboBox_1',
            method: 'post',
            label: 'Browser:',
            labelPosition: 'top'
        });

        $('#treegrid_1').treegrid({
            url: '../TempleManager/Tree_1',
            method: 'post',
            animate: true,
            async: false
        });

        $('#tree_1').tree({
            url: '../TempleManager/Tree_1',
            method: 'post',
            animate: true,
            async: false,
            formatter: function (node) {
                var s = node.text;
                if (node.children) {
                    s += '&nbsp;<span style=\'color:blue\'>(' + node.children.length + ')</span>';
                }
                return s;
            }
        });

        $('#tt').datagrid({
            url: '../TempleManager/Index',
            method: 'post',
            columns: [[
                { field: 'ID', title: 'ID', width: 60, align: 'right' },
                { field: 'ParamKey', title: 'ParamKey', width: 80 },
                { field: 'ParamValue', title: 'ParamValue', width: 80 }
            ]]
        });


    </script>
</body>
</html>
